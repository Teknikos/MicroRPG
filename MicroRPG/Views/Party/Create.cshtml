@model PlayerVM;

@{
    ViewData["Title"] = "Create";
}
    <div class="ViewHeader" id="createHeader">
        <h1  >Create Party Member</h1>
    </div>
<div class="createContainer">

    <br />
    <div class="createForm">
        <form action="/" method="post">
            <label>Name:</label>
            <input asp-for="Name" value="" />
            <br />
            <br />
            <label>Age:</label>
            <input asp-for="Age" value="" />
            <br />
            <br />
            <label>Gender:</label>
            <div class="createRadio">

                <input asp-for="Gender" type="radio" value="female" />
                <label>Female</label>
                <br />
                <input asp-for="Gender" type="radio" value="male" />
                <label>Male</label>

            </div>
            <div id="doneCreateBtn">
                <button asp-controller="Party" asp-action="Summary">
                    Done
                </button>
            </div>

        </form>
</div>
</div>