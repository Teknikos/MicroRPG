@model PlayerDetailsVM

<div class="playerDetailsContainer">
    <div class="playerDetailsHeader">
        <h1>@Model.Name</h1>
    </div>
    <div class="playerDetailsRow" id="stats">
        <ul>
            <li>Attack: @Model.Attack</li>
            <li>Wisdom: @Model.Wisdom</li>
            <li>Damage Reduction: @Model.DamageReduction</li>
        </ul>
    </div>
    <div class="playerDetailsRow" id="playerDetailsacterImg">
        @if (string.Compare(Model.Gender,"female",true) == 0)
        {
            <img src="~/img/player/portrait-outline-female.png" alt="Female" />

        }
        @if (string.Compare(Model.Gender,"male",true) == 0)
        {
            <img src="~/img/player/portrait-outline-male.png" alt="Alternate Text" />
        }
        

    </div>
    <div class="playerDetailsRow" id="spells">
        <ul>
            <li>Fireball</li>
            <li>Cure Light Wounds</li>
            <li>Control Weather</li>
        </ul>
    </div>
    <div id="resourceBars">
        <ul>
            <li>Health: @Model.HP</li>
            <li>Mana: @Model.MP</li>
        </ul>

    </div>
</div>
