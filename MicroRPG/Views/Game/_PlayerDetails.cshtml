@model PlayerDetailsVM

<div class="container">
    <header><button>Wolfgang</button><button>Cedrik</button><button>Hagrid</button></header>

    <h1>@Model.Name</h1>
    <div class="charRow" id="stats">
        <ul>
            <li>Attack: @Model.Attack</li>
            <li>Wisdom: @Model.Wisdom</li>
            <li>Damage Reduction: @Model.DamageReduction</li>
        </ul>
    </div>
    <div class="charRow crop" id="characterImg">
        <img src="~/img/player/female-silhouette.png" alt="Female" />
    </div>
    <div class="charRow" id="spells">
        <ul>
            <li>Fireball</li>
            <li>Cure Light Wounds</li>
            <li>Control Weather</li>
        </ul>
    </div>
    <div id="resourceBars">
        <ul>
            <li>Health: @Model.HP</li>
            <li>Mana: @Model.MP</li>
        </ul>

    </div>
</div>
<a asp-controller="Game" asp-action="Main">
    <div> Done </div>
</a>
<style>
    .container {
        background-color: saddlebrown;
    }
    li{
        list-style:none;
    }
    .container {
        text-align: center;
    }

    .charRow {
        display: inline-block;
    }

    .crop {
        height: 300px;
        width: 400px;
        overflow: hidden;
    }

        .crop img {
            height: 400px;
            width: auto;
        }
</style>