
<div id="environmentHeader">
    <img style="width: 500px; height:100px;" src="~/img/environments/desert.jpg" alt="Desert">
    <img style="width: 500px; height:100px;" src="~/img/environments/forest.jpg" alt="Forest">
    <img style="width: 500px; height:100px;" src="~/img/environments/ruins.jpg" alt="Ruins">
    <img style="width: 500px; height:100px;" src="~/img/environments/village.jpg" alt="Village">
</div>

<table style="max-width:80%" id="creatureTable">
    <tr>
        <td class="crop">
            <img src="~/img/monsters/beetle.jpg" alt="Beetle" name="Beetle" class="getDetails">
        </td>
        <td class="crop">
            <img src="~/img/monsters/cougar.png" alt="Cougar" name="Cougar" class="getDetails">
        </td>
        <td class="crop">
            <img src="~/img/monsters/nymph.png" alt="Nymph" name="Nymph" class="getDetails">
        </td>
    </tr>
    <tr>
        <td class="crop">
            <img src="~/img/monsters/ghost.png" alt="Ghost" name="Ghost" class="getDetails">
        </td>
        <td class="crop">
            <img src="~/img/monsters/giant-lizard.png" alt="giant-lizard" name="giant-lizard" class="getDetails">
        </td>
        <td class="crop">
            <img src="~/img/monsters/wyvern.png" alt="wyvern" name="wyvern" class="getDetails">
        </td>
    </tr>
    <tr>
        <td class="crop">
            <img src="~/img/monsters/snake.png" alt="snake" name="snake" class="getDetails">
        </td>
        <td class="crop">
            <img src="~/img/monsters/werewolf.png" alt="werewolf" name="werewolf" class="getDetails">
        </td>
        <td class="crop">
            <img src="~/img/monsters/Guard.png" alt="Guard" name="Guard" class="getDetails">
        </td>
    </tr>
</table>

<a asp-controller="Game" asp-action="Main">
    <input class="buttons" type=button Text="Button" value="Back" style="font-size: 24px;" />
</a>

<div class="modal" data-route="Creatures">
    <div class="modalContainer"></div>
</div>

@section scripts
{
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
    <script src="~/scripts/DetailsModal.js" ></script>
}